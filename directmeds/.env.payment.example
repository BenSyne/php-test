# Payment System Configuration
# Add these to your main .env file

# Stripe Configuration
STRIPE_SECRET_KEY=sk_test_your_test_secret_key_here
STRIPE_PUBLISHABLE_KEY=pk_test_your_test_publishable_key_here
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret_here

# Payment System Settings
PAYMENT_DEFAULT_GATEWAY=stripe
PAYMENT_TEST_MODE=true
PAYMENT_WEBHOOK_TOLERANCE=300
PAYMENT_MAX_RETRY_ATTEMPTS=3
PAYMENT_FRAUD_THRESHOLD=0.7

# Security Settings
PAYMENT_RATE_LIMIT_PER_MINUTE=10
PAYMENT_SECURITY_ENABLED=true
PAYMENT_GEO_RESTRICTIONS=false

# Compliance Settings
PAYMENT_PCI_COMPLIANCE_LEVEL=level_1
PAYMENT_AUDIT_RETENTION_DAYS=2555  # 7 years for HIPAA compliance
PAYMENT_LOG_SENSITIVE_DATA=false

# Notification Settings (optional)
PAYMENT_SLACK_WEBHOOK_URL=
PAYMENT_ADMIN_EMAIL=admin@directmeds.com