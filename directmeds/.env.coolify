# Coolify-specific environment variables
# These work with Traefik reverse proxy

# Application
APP_NAME="Direct Meds"
APP_ENV=production
APP_KEY=base64:YOUR_APP_KEY_HERE
APP_DEBUG=false
APP_URL=https://${APP_DOMAIN}
APP_DOMAIN=directmeds.yourdomain.com

# Database - Internal container names
DB_CONNECTION=mysql
DB_HOST=mysql
DB_PORT=3306
DB_DATABASE=directmeds
DB_USERNAME=directmeds_user
DB_PASSWORD=${DB_PASSWORD}
DB_ROOT_PASSWORD=${DB_ROOT_PASSWORD}

# Redis - Internal container name
REDIS_HOST=redis
REDIS_PASSWORD=null
REDIS_PORT=6379

# Session & Cache
SESSION_DRIVER=redis
CACHE_STORE=redis
QUEUE_CONNECTION=redis

# Traefik-specific settings
TRUSTED_PROXIES="*"
FORCE_HTTPS=true

# Health checks
HEALTH_CHECK_ENABLED=true
HEALTH_CHECK_PATH=/health

# Container settings
WWWUSER=1000
WWWGROUP=1000